<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travel.cotravel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.travel.cotravel.login.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/noToolbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id"/>

        <activity
            android:name="com.travel.cotravel.MainActivity"
            android:theme="@style/noToolbar"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.travel.cotravel.fragment.member.MembersActivity"
            android:launchMode="singleTask"
            android:label="Members"/>

        <activity android:name="com.travel.cotravel.fragment.account.profile.ui.TrashActivity"
            android:label="Trash"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden"/>

        <activity android:name="com.travel.cotravel.fragment.account.profile.ui.PhotoRequestActivity"
            android:launchMode="singleTask"/>

        <activity android:name="com.travel.cotravel.fragment.account.profile.ui.ViewPhotoRequestActivity"
            android:parentActivityName="com.travel.cotravel.fragment.account.profile.ui.PhotoRequestActivity"
            android:launchMode="singleTask"/>

        <activity android:name="com.travel.cotravel.fragment.account.profile.ui.SettingsActivity"
            android:launchMode="singleTask"
            android:theme="@style/noToolbar"
            android:parentActivityName="com.travel.cotravel.MainActivity"/>

        <activity
            android:name="com.travel.cotravel.fragment.trip.FilterTripActivity"
            android:parentActivityName="com.travel.cotravel.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/noToolbar" />

        <activity android:name="com.travel.cotravel.fragment.account.profile.verify.EditPhoneActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.travel.cotravel.MainActivity"/>

        <activity android:name="com.travel.cotravel.fragment.account.profile.verify.VerifyPhoneActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.travel.cotravel.MainActivity"/>

        <activity
            android:name="com.travel.cotravel.fragment.trip.AddTripActivity"
            android:parentActivityName="com.travel.cotravel.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/noToolbar"/>

        <activity
            android:name="com.travel.cotravel.fragment.chat.MessageActivity"
            android:parentActivityName="com.travel.cotravel.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/noToolbar" />
        <activity
            android:name="com.travel.cotravel.fragment.trip.EditProfileActivity"
            android:label="Profile Information"
            android:launchMode="singleTask"
            android:parentActivityName="com.travel.cotravel.MainActivity"
            android:theme="@style/noToolbar" />
        <activity android:name="com.travel.cotravel.login.RegisterActivity"
            android:launchMode="singleTask"
            android:theme="@style/noToolbar"/>
        <activity android:name="com.travel.cotravel.login.ResetPasswordActivity"
            android:launchMode="singleTask"/>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


        <activity
            android:name="com.facebook.FacebookActivity"
            android:launchMode="singleTask"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:launchMode="singleTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>


        <activity android:name="com.travel.cotravel.fragment.account.profile.ui.ProfileActivity"
            android:launchMode="singleTask"
            android:theme="@style/noToolbar" >

        </activity>
        <activity android:name="com.travel.cotravel.fragment.account.profile.ui.EditPhotoActivity"
            android:launchMode="singleTask"
            android:label="Edit Photo"/>
        <activity android:name="com.travel.cotravel.fragment.account.profile.ui.ChangePasswordActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.travel.cotravel.fragment.account.profile.ui.ChangePrefActivity"
            android:launchMode="singleTask"
            android:theme="@style/noToolbar"/>

        <activity android:name="com.travel.cotravel.fragment.account.profile.ui.FacebookImageActivity"
            android:launchMode="singleTask"/>

        <service android:name="com.travel.cotravel.fragment.chat.notification.MyFirebaseIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service android:name="com.travel.cotravel.fragment.chat.notification.MyFirebaseMessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>